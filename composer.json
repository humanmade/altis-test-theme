{
    "name": "altis/test-theme",
    "type": "wordpress-theme",
    "description": "Test theme for Altis DXP, based on Automattic/_s starter theme.",
    "keywords": [
        "WordPress",
        "Themes"
    ],
    "homepage": "https://github.com/humanmade/altis-test-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Contributors",
            "homepage": "https://github.com/humanmade/altis-test-theme/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "wptrt/wpthemereview": "^0.2.1",
        "php-parallel-lint/php-parallel-lint": "^1.2.0",
        "wp-cli/i18n-command": "^2.2.5"
    },
    "scripts": {
        "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
        "make-pot": "wp i18n make-pot . languages/_s.pot"
    },
    "support": {
        "issues": "https://github.com/humanmade/altis-test-theme/issues",
        "source": "https://github.com/humanmade/altis-test-theme"
    }
}